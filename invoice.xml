<tryton>
    <data>

        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
        </record>
        <record model="ir.ui.view" id="invoice_view_tree">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_tree"/>
            <field name="name">invoice_tree</field>
        </record>

        <record model="ir.ui.view" id="sale_start_view_form">
            <field name="model">subdiario.sale.start</field>
            <field name="type">form</field>
            <field name="name">sale_start_form</field>
        </record>
        <!-- Sale complete -->
        <record model="ir.action.wizard" id="wizard_subdiario_sale">
            <field name="name">Subdiario sale</field>
            <field name="wiz_name">subdiario.sale</field>
        </record>
        <record model="ir.action.report" id="report_subdiario_sale">
            <field name="name">Subdiario sale</field>
            <field name="report_name">subdiario.sale_report</field>
            <field name="report">subdiario/sale.fods</field>
            <field name="template_extension">ods</field>
        </record>

        <!-- Sale type -->
        <record model="ir.action.wizard" id="wizard_subdiario_sale_type">
            <field name="name">Subdiario sale type</field>
            <field name="wiz_name">subdiario.sale.type</field>
        </record>
        <record model="ir.action.report" id="report_subdiario_sale_type">
            <field name="name">Subdiario sale type</field>
            <field name="report_name">subdiario.sale_type_report</field>
            <field name="report">subdiario/sale_type.fods</field>
            <field name="template_extension">ods</field>
        </record>

        <!-- Sale subdivision -->
        <record model="ir.action.wizard" id="wizard_subdiario_sale_subdivision">
            <field name="name">Subdiario sale subdivision</field>
            <field name="wiz_name">subdiario.sale.subdivision</field>
        </record>
        <record model="ir.action.report" id="report_subdiario_sale_subdivision">
            <field name="name">Subdiario sale subdivision</field>
            <field name="report_name">subdiario.sale_subdivision_report</field>
            <field name="report">subdiario/sale_subdivision.fods</field>
            <field name="template_extension">ods</field>
        </record>

        <record model="ir.ui.view" id="purchase_start_view_form">
            <field name="model">subdiario.purchase.start</field>
            <field name="type">form</field>
            <field name="name">purchase_start_form</field>
        </record>
        <record model="ir.action.report" id="report_subdiario_purchase">
            <field name="name">Subdiario purchase</field>
            <field name="report_name">subdiario.purchase_report</field>
            <field name="report">subdiario/purchase.fods</field>
            <field name="template_extension">ods</field>
        </record>
        <record model="ir.action.wizard" id="wizard_subdiario_purchase">
            <field name="name">Subdiario purchase</field>
            <field name="wiz_name">subdiario.purchase</field>
        </record>
        <menuitem icon="tryton-open" id="menu_subdiario" name="Subdiario"
            parent="account.menu_reporting" sequence="50"/>
        <menuitem name="Subdiario sale" parent="menu_subdiario"
            sequence="50" id="menu_subdiario_sale" icon="tryton-open"/>
        <menuitem name="Sale complete" parent="menu_subdiario_sale"
            sequence="10" action="wizard_subdiario_sale"
            id="menu_subdiario_sale_complete" icon="tryton-spreadsheet"/>
        <menuitem name="Sale by type" parent="menu_subdiario_sale"
            sequence="20" action="wizard_subdiario_sale_type"
            id="menu_subdiario_sale_type" icon="tryton-spreadsheet"/>
        <menuitem name="Sale by subdivision" parent="menu_subdiario_sale"
            sequence="30" action="wizard_subdiario_sale_subdivision"
            id="menu_subdiario_sale_subdivision" icon="tryton-spreadsheet"/>

        <menuitem name="Purchase" parent="menu_subdiario"
            sequence="50" action="wizard_subdiario_purchase"
            id="menu_subdiario_purchase" icon="tryton-spreadsheet"/>
    </data>
</tryton>
